<div class="container">

  <h1>Write a new review! 📝</h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <br>
    <%= f.submit "Add my review", class: "btn btn-primary" %>

    <%= link_to "See all reviews", restaurant_reviews_path, class: "btn btn-primary"%>
  <% end %>
</div>